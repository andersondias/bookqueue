    <td class="book_cover">
			<% if !book.cover.nil? %>
				<%= image_tag(book.cover.public_filename,{:style => 'height: 98px; width: 74px;'}) %>
			<% else %>
				<%= image_tag(book.image, {:style => 'height: 98px; width: 74px;'}) %>
			<% end %>
		</td>
    <td class="book_description">
				<%= link_to book.title, book_url(book) %><br/>
				by <%= h book.author %><br/>
			<%= render :partial => 'admin_actions',  :locals => { :book => book } %>
		</td>
		
	<% if @current_item >= 1 %>
	  </tr><tr>
		<% @current_item = 0 %>
	<% else %>
		<% @current_item += 1 %>
	<% end %>