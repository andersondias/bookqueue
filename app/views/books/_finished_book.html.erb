  <td class="finished_book_cover">
		<%= link_to show_cover(book,'small'), book_url(book) %>	
	</td>
  <td class="finished_book_description">
			<%= link_to book.title, book_url(book) %><br/>
			by <%= h book.author %><br/>
			<% if book.days_taken %> finished in <b><%= h book.days_taken %></b> days<% end %>
			<% if book.rate %>
				<%= show_rating(book.rate) %>
			<% end %>
			<%= render :partial => 'admin_actions',  :locals => { :book => book } %>
	</td>
