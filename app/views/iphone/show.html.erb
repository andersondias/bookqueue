<%#
 using inline styles to override
 iUI's default styles.
%>
<div title="<%= @book.title %>">
	<div id="cover" style="float: left; margin: 10px;">
		<%= show_cover(@book,'medium') %>
	</div>
	<h2 style="margin-top: 2px;"  > <%= link_to @book.title, @book.url %></h2>
	 <p style="margin-top: -5px;" > 
	   by <%= h @book.author %>
		<%= "<br/>#{@book.pages} pages" if @book.pages %>	   
	 </p>
	 <p style="margin-top: -5px;" > <% if @book.rate %><%= show_rating(@book.rate,"iphone") %><% end %></p>	
	 <p style="margin: 10px; text-align: justify; padding: 10px;"><%= simple_format(@book.blurb) if @book.blurb %></p>
	 <p style="margin-left: 10px;"><% if @book.days_taken %> Finished in <b><%= h @book.days_taken %></b> days<% end %></p>	

	 <% if @book.review %>
	 	<h3 style="margin-left: 10px;">Review</h3>
	 	<p  style="margin: 10px; text-align: justify;" ><%= simple_format(@book.review) %></p>
	<% end %>

	<% if @book.related_books && @book.related_books.size > 0 %>
	<h3 style="margin-left: 10px;">Related Books</h3>
	<ul>
		<% @book.related_books.each do |book| %>
	    <li><%= link_to book.title, '/iphone/show/'+book.id.to_s %></li>
		<% end %>
	</ul>
	<% end %>
</div>